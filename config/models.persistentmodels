Book json
    productId ProductId
    title Text
    UniqueTitle title 
    author Text
    genre Text 
    pageCount Int
    cost Int
    deriving Eq
    deriving Show


Product json
    productType ProductTypes  
    stockLocationId StockLocationId
    acquired UTCTime
    

Customer json
    name Text
    balance Int
    deriving Eq
    deriving Show

Store json
    stockLocationId StockLocationId
    name Text
    balance Int
    deriving Eq
    deriving Show

Wharehouse json 
    stockLocationId StockLocationId
    name Text
    deriving Eq
    deriving Show

StockLocation json 
    name Text
    deriving Eq
    deriving Show

Order json
	productId ProductId
	buyerId CustomerId
	stockLocationId StockLocationId
	status OrderStatus
    deriving Eq
    deriving Show


